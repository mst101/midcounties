{
  "author": "Mark Thompson <info@hiddengambia.com>",
  "license": "MIT",
  "name": "midcounties",
  "version": "2.0.0",
  "description": "E2E tests for Midcounties Membership App",
  "homepage": "https://github.com/mst101/midcounties",
  "type": "module",
  "repository": {
    "type": "git",
    "getUrl": "https://github.com/mst101/midcounties.git"
  },
  "scripts": {
    "clean": "read -p \"Are you sure you want to clean the project? [y/n] \" REPLY; if [[ $REPLY =~ ^[Yy]$ ]]; then rm -R .git .github demo-app test .codeclimate.yml .travis.yml jest.json wdio.BUILD.conf.js src/features-examples/**; fi",
    "test": "run-s test:*",
    "test:lint": "eslint 'src/**/*.ts' 'test/**/*.js!(setup.js)'",
    "test:unit": "jest --config=jest.config.cjs --detectOpenHandles",
    "test:features": "node --loader ts-node/esm ./node_modules/.bin/wdio run wdio.BUILD.conf.ts",
    "wdio": "node --loader ts-node/esm ./node_modules/.bin/wdio run wdio.BUILD.conf.ts",
    "local": "CONF=local rm -r ./logs/* && node --loader ts-node/esm ./node_modules/.bin/wdio run wdio.LOCAL.conf.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@wdio/cli": "^8.15.5",
    "@wdio/config": "^8.15.4",
    "@wdio/cucumber-framework": "^8.15.4",
    "@wdio/globals": "^8.15.4",
    "@wdio/local-runner": "^8.15.4",
    "@wdio/shared-store-service": "^8.16.11",
    "@wdio/spec-reporter": "^8.15.0",
    "@wdio/static-server-service": "^8.15.0",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-wdio": "^8.8.7",
    "http-server": "^14.1.1",
    "jest": "^29.6.3",
    "jest-circus": "^29.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webdriverio": "^8.15.4"
  }
}
